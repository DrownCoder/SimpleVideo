<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="app_main_color" format="color"/>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TabsView">
        <attr name="tab_textsize" format="dimension"/>
        <attr name="tab_textcolor_clicked" format="color"/>
        <attr name="tab_textcolor" format="color"/>
        <attr name="tab_color" format="color"/>
        <attr name="tab_height" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="DriverProgress">
        <attr name="panel_radius" format="dimension"/>
        <attr name="panel_width" format="dimension"/>
        <attr name="panel_density" format="integer"/>
        <attr name="panel_point_radius" format="dimension"/>
        <attr name="panel_progress" format="integer" />
        <attr name="panel_max" format="integer"/>
        <attr name="indicator_radius" format="dimension"/>
    </declare-styleable>
</resources>