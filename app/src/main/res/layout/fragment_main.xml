<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.shuyu.video.customview.TabsView
        android:id="@+id/tabslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:tab_color="@color/app_main_color"
        custom:tab_textcolor_clicked="@color/app_main_color"
        custom:tab_textcolor="@color/black_1"
        custom:tab_textsize="18sp"
        custom:tab_height="1dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_id_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
